<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mainActivity.MainActivity">

    <FrameLayout
        android:id="@+id/main_fl_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:paddingHorizontal="15dp"
        android:orientation="horizontal"
        android:background="@drawable/main_ll_menu"
        android:elevation="8dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/main_tv_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Home"
            android:textColor="#499D2F"
            android:textSize="16sp"
            android:drawableLeft="@drawable/ic_outline_home_24"
            android:drawableTint="#499D2F"/>

        <TextView
            android:id="@+id/main_tv_consultas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Consultas"
            android:textColor="#C8CCD8"
            android:textSize="16sp"
            android:drawableLeft="@drawable/ic_outline_bookmark_border_24"
            android:drawableTint="#C8CCD8"/>

        <TextView
            android:id="@+id/main_tv_preferences"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Preferencias"
            android:textColor="#C8CCD8"
            android:textSize="16sp"
            android:drawableLeft="@drawable/ic_baseline_settings_24"
            android:drawableTint="#C8CCD8"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>




