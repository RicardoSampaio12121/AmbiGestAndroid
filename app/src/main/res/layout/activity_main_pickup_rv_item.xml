<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="12dp"
    android:layout_marginHorizontal="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/main_rv_item_iv_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/green_residuos_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/main_rv_item_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pickup name"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/main_rv_item_iv_icon"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/main_rv_item_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15 de Fevereiro"
        android:textColor="#499D2F"
        android:textStyle="bold"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@id/main_rv_item_iv_icon"
        app:layout_constraintTop_toBottomOf="@id/main_rv_item_tv_name"/>

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_keyboard_arrow_right_24"
        android:layout_marginEnd="10dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>