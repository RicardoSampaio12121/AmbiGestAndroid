<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="16dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/card"
    android:padding="16dp">
        <TextView
            android:id="@+id/consultas_faturas_item_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Janeiro"
            android:textStyle="bold"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/white"/>
        <View
            android:id="@+id/consultas_faturas_item_graphic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/purple_200"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/consultas_faturas_item_month"
            app:layout_constraintStart_toStartOf="parent"/>

        <View
            android:id="@+id/consultas_faturas_item_circleConsumo"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/circle"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:backgroundTint="@color/lightGreen"
            app:layout_constraintStart_toEndOf="@+id/consultas_faturas_item_graphic"
            app:layout_constraintTop_toTopOf="@+id/consultas_faturas_item_graphic"
            />

        <TextView
            android:id="@+id/consultas_faturas_item_consumo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/consumo"
            android:textColor="@color/white"
            android:layout_marginStart="8dp"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/consultas_faturas_item_circleConsumo"
            app:layout_constraintTop_toTopOf="@+id/consultas_faturas_item_circleConsumo"
            app:layout_constraintBottom_toBottomOf="@+id/consultas_faturas_item_circleConsumo"/>

        <TextView
            android:id="@+id/consultas_faturas_item_consumoValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="16.2 m3"
            android:textColor="@color/white"
            android:layout_marginEnd="32dp"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/consultas_faturas_item_circleConsumo"
            app:layout_constraintBottom_toBottomOf="@+id/consultas_faturas_item_circleConsumo"/>

        <View
            android:id="@+id/consultas_faturas_item_circleAumento"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/circle"
            android:layout_marginTop="22dp"
            android:layout_marginStart="16dp"
            android:backgroundTint="@color/green"
            app:layout_constraintStart_toEndOf="@+id/consultas_faturas_item_graphic"
            app:layout_constraintTop_toBottomOf="@+id/consultas_faturas_item_circleConsumo"
            />

        <TextView
            android:id="@+id/consultas_faturas_item_aumento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/aumento"
            android:textColor="@color/white"
            android:layout_marginStart="8dp"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/consultas_faturas_item_circleAumento"
            app:layout_constraintTop_toTopOf="@+id/consultas_faturas_item_circleAumento"
            app:layout_constraintBottom_toBottomOf="@+id/consultas_faturas_item_circleAumento"/>

        <TextView
            android:id="@+id/consultas_faturas_item_aumentoValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="-0.5 m3"
            tools:textColor="@color/green"
            android:textColor="@color/white"
            android:layout_marginEnd="32dp"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/consultas_faturas_item_circleAumento"
            app:layout_constraintBottom_toBottomOf="@+id/consultas_faturas_item_circleAumento"/>

        <View
            android:id="@+id/consultas_faturas_item_circleTotal"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="@drawable/circle"
            android:layout_marginTop="22dp"
            android:layout_marginStart="16dp"
            android:backgroundTint="@color/lightPurple"
            app:layout_constraintStart_toEndOf="@+id/consultas_faturas_item_graphic"
            app:layout_constraintTop_toBottomOf="@+id/consultas_faturas_item_circleAumento"
            />

        <TextView
            android:id="@+id/consultas_faturas_item_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total"
            android:textColor="@color/white"
            android:layout_marginStart="8dp"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@+id/consultas_faturas_item_circleTotal"
            app:layout_constraintTop_toTopOf="@+id/consultas_faturas_item_circleTotal"
            app:layout_constraintBottom_toBottomOf="@+id/consultas_faturas_item_circleTotal"/>

        <TextView
            android:id="@+id/consultas_faturas_item_totalValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="22,90â‚¬"
            tools:textColor="@color/white"
            android:textColor="@color/white"
            android:layout_marginEnd="32dp"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/consultas_faturas_item_circleTotal"
            app:layout_constraintBottom_toBottomOf="@+id/consultas_faturas_item_circleTotal"/>
</androidx.constraintlayout.widget.ConstraintLayout>