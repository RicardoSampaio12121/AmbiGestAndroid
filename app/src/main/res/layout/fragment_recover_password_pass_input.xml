<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    tools:context=".recoverPassword.RecoverPasswordPassInputFragment">

    <EditText
        android:id="@+id/recoverPassword_et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:inputType="textPassword"
        android:hint="New password"
        android:textColorHint="#8A90A3"
        android:padding="15dp"
        android:background="@drawable/login_et_email"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"/>

    <EditText
        android:id="@+id/recoverPassword_et_repeat_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:inputType="textPassword"
        android:hint="Repeat new password"
        android:textColorHint="#8A90A3"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:background="@drawable/login_et_email"
        android:layout_marginHorizontal="20dp"/>

</LinearLayout>